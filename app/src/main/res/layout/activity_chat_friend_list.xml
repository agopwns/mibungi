<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatFriendListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorPantoneBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="20dp"
            android:text="친구 목록"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageButton
            android:id="@+id/topbar_friend_list_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_group_black_24dp"/>

        <ImageButton
            android:id="@+id/topbar_room_list_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_library_books_black_24dp"/>

        <ImageButton
            android:id="@+id/topbar_search_list_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_search_black_24dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_friend_rv"
        android:layout_width="match_parent"
        android:layout_height="680dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>