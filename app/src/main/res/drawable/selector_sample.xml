<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval">
            <solid android:color="@color/colorOpacity0"/>
            <size
                android:width="25dp"
                android:height="25dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid android:color="@color/colorOpacity20"/>
            <size
                android:width="25dp"
                android:height="25dp"
                />
        </shape>
    </item>
</selector>